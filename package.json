{
  "name": "pos1",
  "version": "1.0.3",
  "private": true,
  "description": "POS1 - A Point of Sale application built with Electron, React, and Flask",
  "author": "Your Name <your.email@example.com>",
  "main": "electron.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:build": "electron-builder",
    "start-flask": "python app.py",
    "start": "concurrently \"npm run start-flask\" \"npm run electron\"",
    "start-electron": "electron .",
    "build-all": "npm run build && pyinstaller app.spec && npm run electron:build"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.5.1",
    "axios": "^1.8.3",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "chart.js": "^4.5.0",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.6.2",
    "exceljs": "^4.4.0",
    "jspdf": "^3.0.0",
    "jspdf-autotable": "^4.0.0",
    "lucide-react": "^0.511.0",
    "nodemailer": "^6.10.0",
    "number-to-words": "^1.2.4",
    "react": "^18.3.1",
    "react-bootstrap": "^2.10.9",
    "react-bootstrap-typeahead": "^6.4.1",
    "react-chartjs-2": "^5.3.0",
    "react-datepicker": "^8.1.0",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-qr-code": "^2.0.15",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.4.0",
    "react-select": "^5.10.1",
    "redux-persist": "^6.0.0",
    "uuid": "^11.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^7.6.0",
    "electron": "^34.3.3",
    "electron-builder": "^24.13.3",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.13.0",
    "vite": "^6.3.5"
  },
  "build": {
    "appId": "com.yourapp.pos1",
    "productName": "POS1",
    "files": [
      "electron.cjs",
      "dist/**/*",
      "node_modules/electron-updater/**/*"
    ],
    "extraResources": [
      {
        "from": "dist/",
        "to": "dist/"
      },
      {
        "from": "static/uploads",
        "to": "pre-existing-Uploads"
      },
      {
        "from": "dist/flask_server_dist/flask_server.exe",
        "to": "flask_server.exe"
      },
      {
        "from": "sqlite-tools-win-x64-3500400/sqlite3.exe",
        "to": "sqlite3.exe"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/kyle-logo-logo.ico"
    },
    "nsis": {
      "include": "installer.nsh",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "perMachine": true,
      "allowElevation": true
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": "AppImage"
    },
    "directories": {
      "output": "dist_electron"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "your-github-username",
        "repo": "your-repo-name",
        "releaseType": "release"
      }
    ]
  }
}